# Copy this file to .env and fill values before deploying the server
# Example values shown as placeholders â€” DO NOT commit secrets to git.

# Server settings
# Port the server listens on
PORT=5000
# Node environment (development | production)
NODE_ENV=development

# URL of your frontend (used for CORS and issuing cookies)
# In production set this to your Vercel/Netlify/etc URL, e.g. https://your-app.vercel.app
CLIENT_URL=http://localhost:3000

# Optional: email address that should be granted admin on startup
# If not set, a default admin email is used by the app (see README/server docs)
ADMIN_EMAIL=admin@example.com

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/your-db-name

# JWT secret used to sign tokens
JWT_SECRET=your_jwt_secret_here

# Uploads
# Max allowed upload size in megabytes (applies to multer memory storage limits)
UPLOAD_MAX_FILE_MB=10

# Cloudinary credentials (for image uploads)
# Preferred: provide a single CLOUDINARY_URL in the format:
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# Alternatively you can set the separate values:
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
